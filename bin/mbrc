#!/bin/bash

MNT="$HOME/Library/CloudStorage/BRC"
diskutil unmount force "$MNT" 2>/dev/null
mkdir -p "$MNT"
brcotp | sshfs -o kill_on_unmount,reconnect,allow_other,defer_permissions,direct_io,password_stdin,volname=BRC,ServerAliveInterval=1 vmyers@hpc.brc.berkeley.edu:/global/scratch/users/vmyers/ "$MNT"
ln -s "$MNT" ~/brc

